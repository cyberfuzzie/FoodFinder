<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        tools:context=".SettingsActivity">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_preferred"
            android:id="@+id/settings_button_preferred"
            android:gravity="center_vertical|left"
            android:onClick="openSettingsPreferred" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Allergien"
            android:id="@+id/settings_button_allergies"
            android:gravity="center_vertical|left"
            android:onClick="openSettingsAllergies" />
</LinearLayout>
