<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_budget"
            android:id="@+id/settings_button_budget"
            android:gravity="center_vertical|left"
            android:onClick="openSettingsBudget" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_preferred"
            android:id="@+id/settings_button_preferred"
            android:gravity="center_vertical|left"
            android:onClick="openSettingsPreferred" />
    <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Allergien"
            android:id="@+id/settings_button_allergies"
            android:gravity="center_vertical|left"
            android:onClick="openSettingsAllergies" />
</LinearLayout>
